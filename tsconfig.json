{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "types": [],
    "paths": {
      "@/*": ["src/*"],
      "@domain/*": ["src/domain/*"],

      "_generated/*": ["convex/_generated/*"],
      "functions/*": ["convex/functions/*"],
      "domain/*": ["convex/domain/*"],
      "shared": ["convex/shared/index.ts"],
      "shared/*": ["convex/shared/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": ["convex/**", "scripts/**", "node_modules"]
}
